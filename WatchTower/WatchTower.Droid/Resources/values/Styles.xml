<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<style name="AppTheme.ActionBar">
		<item name="android:textColorSecondary">@color/white</item>
		<item name="android:textColorPrimary">@color/white</item>
	</style>
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
	</style>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
	</style>
	<style name="location_header_item_style">
		<item name="android:layout_height">match_parent</item>
		<item name="android:textColor">@color/material_grey_850</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:textSize">@dimen/abc_text_size_medium_material</item>
	</style>
	<style name="location_value_style">
		<item name="android:layout_height">match_parent</item>
		<item name="android:textColor">@color/dark_blue</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:textSize">@dimen/abc_text_size_medium_material</item>
	</style>
	<style name="filler_view_style">
		<item name="android:layout_height">0dp</item>
		<item name="android:layout_width">0dp</item>
	</style>
    <style name="linear_layout_location_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
     <style name="sensor_style">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:visibility">visible</item>
    </style>
</resources>
